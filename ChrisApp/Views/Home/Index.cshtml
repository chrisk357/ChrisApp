@model  HomeViewModel

<h2>@Model.Title</h2>

@foreach (var slime in Model.Slimes)
{
    <div class="col-sm-4 col-lg-4 col-md-4">
        <div class="thumbnail">
            <img src="@slime.ImageThumbnailUrl" alt="">
        <div class="caption">
            <h3 class="pull-right">@slime.Price.ToString("c")</h3>
        
        <h3>
           <a asp-controller="Home" asp-action="Details" asp-route-id="@slime.Id">@slime.Name</a>
        </h3>
        <p>@slime.ShortDescription</p>
    </div>
  </div>
</div>
}
